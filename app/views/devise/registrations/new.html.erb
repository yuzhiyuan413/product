<div class="login_container">
  <div class="ui centered stackable grid">
    <div class="six wide column">
      <div class="logo"></div>

      <% if flash[:alert].present? %>
      <div class="ui negative message">
          <i class="close icon"></i>
          <p><%= flash[:alert] %></p>
      </div>
      <% end %>
      <div class="ui segments" align="center">
        <div class="ui segment">
          <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { id: 'registration_form', novalidate: true, class: 'ui form' } do |f|  %>
            <div class="field">
              <div class="ui left icon input">
                <%= f.input_field :email, placeholder: '邮箱' %>
                <i class="user icon"></i>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <%= f.input_field :password, placeholder: '密码' %>
                <i class="lock icon"></i>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <%= f.input_field :password_confirmation, placeholder: '重复密码' %>
                <i class="lock icon"></i>
              </div>
            </div>
            <%= f.button :submit, value: '注册', class: 'ui big fluid blue icon button login_btn'  %>
          <% end %>
          <div style="background:#EDEDED;font-size:12px;">
             <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
      <%= render "form" %>
    </div>
  </div>
</div>


