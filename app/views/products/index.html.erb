<%= render layout: 'shared/default_box', locals: { box_title: "商品列表"} do |box| %>
 <div class="col-md-12">
 <% case box when Box::Body %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>名称</th>
      <th>价格</th>
      <th>描述</th>
      <th>时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.sprice %></td>
        <td><%= product.desc %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to '编辑', edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to '删除',
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '创建订单',
            new_product_path,
            :class => 'btn btn-primary' %>
<%= link_to '订单列表',
            user_orders_path(current_user),
            :class => 'btn btn-primary' %>
<%= link_to '创建订单',
            new_user_order_path(current_user),
            :class => 'btn btn-primary' %>
            <% end %>
            </div>
<% end %>
