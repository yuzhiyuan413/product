<%= render layout: 'shared/default_box', locals: { box_title: "商品查看"} do |box| %>
<% case box when Box::Body %>
<dl class="dl-horizontal">
  <dt><strong>名称:</strong></dt>
  <dd><%= @shop.name %></dd>
  <dt><strong>状态:</strong></dt>
  <dd><%= @shop.status %></dd>
  <dt><strong>店主:</strong></dt>
  <dd><%= @shop.user_id %></dd>
</dl>

<%= link_to '返回',
              shops_path, :class => 'btn btn-default'  %>
<%= link_to '编辑',
              edit_shop_path(@shop), :class => 'btn btn-default' %>
<%= link_to '删除',
              shop_path(@shop),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
              <% end %>
<% end %>